% Figure Item, Caption
\newcommand{\fhbrsfigure}[2]{%
  \begin{figure}[h]
    #1
  \caption{#2}
  \end{figure}%
}

% Graphicsname, Caption, width
\newcommand{\fhbrsgraphics}[4]{%
  \begin{figure}[h]
  \begin{center}
  \includegraphics[width=#3]{img/#1}
  \end{center}
  \caption{\label{#4}#2}
  \end{figure}
}

